#include <iostream>

using namespace std;

int main() {
    float n1, n2, soma, sub, mult, div;

    //Entradas
    cout << "Digite o primeiro número ";
    cin >> n1;
    cout << "Digite o segundo número ";
    cin >> n2;

    //Processamento
    soma = n1 + n2;
    sub = n1 - n2;
    mult = n1 * n2;
    div = n1 / n2;

    //Saída
    cout << "O resuldado da soma é: " << soma << endl;
    cout << "O resuldado da subtração é: " << sub << endl;
    cout << "O resuldado da multiplicação é: " << mult << endl;
    cout << "O resuldado da divisão é: " << div << endl;
    system("pause");

}
